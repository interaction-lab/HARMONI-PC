<!-- This is an example launch file for how a ROS application could use a node -->
<launch>
    
    <arg name="web_directory_path" value="$(find pc_face)/web"/>
    <arg name="port" default="8080"/>
	<arg name="use_face" default="true"/>
	<arg name="test" default="false"/>
	<arg name="input_test" default="[{'start': 0.075, 'time': 2,'type': 'action', 'id': 'QT/point_front'}, {'start': 0.075,'time': 2, 'type': 'viseme', 'id': 'POSTALVEOLAR'},{'start': 0.006, 'time': 2,  'type': 'action', 'id': 'happy_face'}]"/>
	<arg name="id_test" default="default"/>
  	<group if="$(arg use_face)">
			<rosparam file="$(find pc_face)/config/configuration.yaml"/>
			<param name="test_face" value="$(arg test)"/>
			<param name="input_test_face" value="$(arg input_test)"/>
			<param name="id_test_face" value="$(arg id_test)"/>
			<param name="name_face" value="face"/>
			<node pkg="pc_face" type="http_server_runner.py" name="face_http_server" output="screen" args="$(arg web_directory_path) $(arg port)" />
			<node pkg="pc_face" type="face_service.py" name="pc_face" output="screen"/>
			<include ns="bridge_face" file="$(find rosbridge_server)/launch/rosbridge_websocket.launch"/>
  	</group>


</launch>
